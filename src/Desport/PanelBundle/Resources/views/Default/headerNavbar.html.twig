            <li class="dropdown messages-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-envelope"></i>
                    {% if messages | length > 0 %}<span class="label label-warning">{{ messages | length }}</span>{% endif %}
                </a>
                <ul class="dropdown-menu">
                    <li class="header">{% if messages | length > 0 %}Tienes {{ messages | length }} nuevos mensajes{% else %}No tienes nuevos mensajes{% endif %}</li>
                    {% if messages | length > 0 %}
                    <li>
                        <ul class="menu">
                            {% for message in messages %}
                            <li>
                                <a href="{{ path('desport_sales_messages_view', {message_id: message.id}) }}">
                                    <h4>
                                        {{ message.subject }}
                                        <small><i class="fa fa-clock-o"></i> {{ message.date | date("d/m/Y H:i") }}</small>
                                    </h4>
                                    <p>{{ message.text[0:35] }}{{ message.text | length > 35 ? '...' : '' }}</p>
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </li>
                    {% endif %}
                    <li class="footer"><a href="{{ path('desport_sales_messages_index') }}">Ir a la bandeja de entrada</a></li>
                </ul>
            </li>
            

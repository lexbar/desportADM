        <script>
            function submitEmail() {
                $('#step1').addClass('animated fadeOutUp');
                
                $.ajax( "{{ path('desport_signup') }}", {type:'post', data:$( "#step1").serialize()} )
                .done(function( data ) { loadStep2(data); });

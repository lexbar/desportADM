{% extends "::backend.html.twig" %}

{% set active = '' %}

{% block content %}
    <section class="content-header">
        <h1>
            Perfil
            <small>edici칩n de mis datos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li class="active">Perfil</li>
        </ol>
    </section>
    
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Modificar mi perfil</h3>
                    </div>
                    <form role="form" action="{{ path('desport_profile_edit') }}" method="post" enctype="multipart/form-data">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="user_username">Nombre de usuario</label>
                                <input type="text" class="form-control" id="user_username" name="user_username" value="{{ user.username }}" disabled>
                            </div>
                            <div class="form-group">
                                <label for="user_name">Nombre real</label>
                                <input type="text" class="form-control" id="user_name" name="user_name" value="{{ user.name }}">
                            </div>
                            <div class="form-group">
                                <label for="user_email">Email</label>
                                <input type="text" class="form-control" id="user_email" name="user_email" value="{{ user.email }}">
                            </div>
                            <hr>
                            <div class="form-group">
                                <label for="user_password">Cambiar contrase침a</label>
                                <input type="password" class="form-control" id="user_password" name="user_password" placeholder="Nueva contrase침a"> <br>
                                <input type="password" class="form-control" id="user_password_repeat" name="user_password_repeat" placeholder="Repetir contrase침a">
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-xs-9">
                                    <div class="form-group">
                                        <label for="user_password">Avatar</label>
                                        <input type="file" class="form-control" id="user_avatar" name="user_avatar">
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    <img src="{{ app.user.avatar | default('/img/avatar_anonymous.png') }}" style="height:60px" alt="Mi Avatar" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Actualizar mi perfil</button>
                        </div>
                    </form>
                </div>            
            </div>
        </div>
    </section>
{% endblock %}
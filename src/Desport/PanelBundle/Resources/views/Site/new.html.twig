{% extends "::backend.html.twig" %}

{% set active = 'clients' %}

{% block content %}
    <section class="content-header">
        <h1>
            Crear Sitio Web
            <small>para {{ client.name }}</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('desport_sales_client_index') }}">Clientes</a></li>
            <li class="active">Crear Sitio</li>
        </ol>
    </section>
    
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Datos del nuevo Sitio Web</h3>
                    </div>
                    <form role="form" action="{{ path('desport_sales_site_new', {client_id:client.id}) }}" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="site_name">Dominio</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="site_name" name="site_name" placeholder="Dominio" value="{{ site.name }}">
                                    <span class="input-group-addon">.deporde.com</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="site_product">Producto</label>
                                <select class="form-control" name="site_product" id="site_product">
                                    {% for product in products %}
                                        <option value="{{ product.id }}"{% if transaction.product.id | default(1) == product.id %}selected="selected"{% endif %}>{{ product.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="client_contactName">Email de administración</label>
                                <input type="text" class="form-control" id="client_contactName" name="client_contactName" placeholder="Nombre de la persona" value="{{ client.email }}">
                            </div>
                            <div class="form-group">
                                <label for="client_addressAddress">Nombre usuario administrador</label>
                                <input type="text" class="form-control" id="client_addressAddress" name="client_addressAddress" placeholder="Dirección" value="{{ client.contactName }}">
                            </div>
                            <div class="form-group">
                                <label for="event_comments">Comentarios</label>
                                <textarea rows="4" class="form-control" id="event_comments" name="event_comments"></textarea>
                            </div>
                        </div>
                        
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-plus fa-fw"></i> Crear Sitio Web</button>
                        </div>
                    </form>
                </div>            
            </div>
        </div>
    </section>
{% endblock %}